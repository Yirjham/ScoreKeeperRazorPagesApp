@page
@model ScoreKeeperRazorPagesUI.Pages.Game.IndexModel

@{
    ViewData["Title"] = "List of Users";
}

<div class="text-center jumbotron bg-info p-3 mb-0 text-light"  >
    <h1 class="display-5">List of Users</h1>
</div>


<div class="container pb-2">
    <div class="row pb-4">
        <div class="col-md-12 pb-1" style="background-color: #bee5eb;">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Player[0].Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model.Player) 
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
          </div>
     </div>
</div>