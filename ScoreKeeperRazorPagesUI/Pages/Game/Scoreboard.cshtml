@page
@model ScoreKeeperRazorPagesUI.Pages.Game.ScoreboardModel

@{
    ViewData["Title"] = "Scoreboard";
}

<h1>Scoreboard</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Player[0].HighestGameScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].GamesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].GamesWon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Player) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HighestGameScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamesPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamesWon)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>