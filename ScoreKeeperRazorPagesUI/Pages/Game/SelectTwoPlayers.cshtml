            @foreach(var player in @Model.Players)
            {
                <option>@player.Name</option>
            }
            
          </select>
          <select class="form-control w-50 mb-2 offset-3" asp-for="@Model.Player2.Name">
            <option value="" selected disabled hidden>Select User 2</option>
