@page
@model ScoreKeeperRazorPagesUI.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Add New Player</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerStats.GamesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerStats.GamesWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerStats.HighestGameScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Players) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerStats.ToList()[0].GamesPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerStats.ToList()[0].GamesWon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerStats.ToList()[0].HighestGameScore)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
